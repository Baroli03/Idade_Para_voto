#include <stdio.h>
#include <locale.h>
#include <stdlib.h>
int main() {
	int idade;
	system("color 5E"); 
	//0 = Preto        8 = Cinza
    //1 = Azul         9 = Azul claro
    //2 = Verde        A = Verde claro
    //3 = Verde-água   B = Verde-água claro
    //4 = Vermelho     C = Vermelho claro
    //5 = Roxo         D = Lilás
    //6 = Amarelo      E = Amarelo claro
    //7 = Branco       F = Branco brilhante
	setlocale(LC_ALL, "PORTUGUESE");
	
	printf("Digite sua Idade: ");
	scanf("%i", &idade);
	
	if ((idade >= 16 && idade < 18) || (idade >= 70)) // vemos se a idade é maior que 16 e menor que 18 ou  maior que 70 anos onde o voto não é obrigatório
	{
		printf("\nVocê pode votar, mas O voto não é Obrigatório");
	}
	
	else if (idade >= 18 && idade < 70) // aqui vemos se a idade está entre 18 e 70 que o voto é obrigatório
	{ 
		printf("\nSeu voto é Obrigatório");
	}
	
	else // caso não esteja entre 16+ não pode votar
	{
		printf("\nNão pode Votar");
	}
}
